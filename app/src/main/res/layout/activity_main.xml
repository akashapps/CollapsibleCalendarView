<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.github.gfranks.collapsible.calendar.CollapsibleCalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        app:ccv_state="month"
        app:ccv_arrowColor="@android:color/black"
        app:ccv_headerTextColor="#2196f3"
        app:ccv_weekDayTextColor="#2196f3"
        app:ccv_dayTextColor="@android:color/black"
        app:ccv_eventIndicatorColor="#2196f3"
        app:ccv_selectedDayBackgroundColor="#2196f3"
        app:ccv_allowStateChange="true"/>

    <ListView
        android:id="@+id/calendar_event_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
